<h1>All Tags</h1>
<% if logged_in? %>
<ul>
	<% @tag.each do |tag| %>
		<li><%= link_to tag.name, article_path(tag) %>
			<%= link_to 'Destroy Tag', tag_path(tag),
				method: :delete,
				data: {confirm: "Are you sure you want to delete this tag?"} %>
		</li>
	<% end %>
</ul>

<p><%= link_to 'Back to All Articles', articles_path %></p>
<% else %>
<h3>You are not logged in.  Please login in below.</h3>

<% end %>